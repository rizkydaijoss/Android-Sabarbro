<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:layout_width="150dp"
        android:scaleType="fitXY"
        android:layout_height="125dp"
        android:id="@+id/ivRestoran"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textNamaRestoran"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/ivRestoran"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textAlamat"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/textNamaRestoran"
        android:layout_toRightOf="@id/ivRestoran"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textHarga"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/textAlamat"
        android:layout_toRightOf="@id/ivRestoran"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textHp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textAlamat"
        android:layout_toRightOf="@id/ivRestoran"
        android:textColor="@color/black"/>

</RelativeLayout>